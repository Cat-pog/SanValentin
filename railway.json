{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "commands": [
      "npm install --legacy-peer-deps",  // Instala las dependencias forzando el uso de dependencias de los pares
      "npm run build"                    // Ejecuta el build despu√©s de instalar las dependencias
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,         // Desactiva el modo de reposo si es necesario
    "multiRegionConfig": {
      "us-west1": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
